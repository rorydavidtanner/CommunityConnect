<section>
    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Welcome back {{ userName }}</h1>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h3>My Requested Tasks</h3>
                <div class="row row-cols-1 row-cols-md-5">
                    {{#each task}}
                    {{#if isOwner}}
                    <div class="card border-dark mb-3 task" data-id="{{ this.id }}" style="max-width: 18rem;">
                        <div class="card-header">{{ this.Category.name }}</div>
                        <div class="card-body text-dark">
                            <h5 class="card-title">{{ this.title }}</h5>
                            <p class="card-text">{{ this.description }}</p>
                        </div>
                        <div class="card-footer text-center">
                            <button type="button" class="btn btn-dark btn-delete" data-id="{{ this.id }}">DELETE
                                TASK</button>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>

                <h3>My Assigned Tasks</h3>
                <div class="row row-cols-1 row-cols-md-5">
                    {{#each task}}
                    {{#unless isOwner}}
                    <div class="card border-dark mb-3 task" data-id="{{ this.id }}" style="max-width: 18rem;">
                        <div class="card-header">{{ this.Category.name }}</div>
                        <div class="card-body text-dark">
                            <h5 class="card-title">{{ this.title }}</h5>
                            <p class="card-text">{{ this.description }}</p>
                        </div>
                        <div class="card-footer text-center">
                            <button type="button" class="btn btn-dark btn-close" data-id="{{ this.id }}">CLOSE
                                TASK</button>
                        </div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</section>